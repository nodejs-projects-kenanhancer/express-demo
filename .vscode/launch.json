{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon srcV2",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "program": "${workspaceFolder}/srcV3/app.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon srcV3",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nodemon",
                "--exec",
                "babel-node",
                "srcV3/app"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon srcV4",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nodemon",
                "--exec",
                "babel-node",
                "srcV4/app"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node"
        }
    ]
}